@model AI_Agent_WebApp.Models.Entities.Agent
@{
    ViewData["Title"] = "Chi tiết AI-Agent";
}
<h2>@Model.Name</h2>
<p><strong>Nhà cung cấp:</strong> @Model.Supplier?.FullName</p>
<p><strong>Danh mục:</strong> @Model.Category?.Name</p>
<p><strong>Mô tả:</strong> @Model.Description</p>
<p><strong>Trạng thái:</strong> @(Model.IsActive ? "Hoạt động" : "Bị khóa")</p>
@if (Model.ImagePath != null)
{
    <img src="~/@Model.ImagePath" alt="@Model.Name" style="max-width:200px;" />
}
