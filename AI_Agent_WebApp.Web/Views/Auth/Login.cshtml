@model AI_Agent_WebApp.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5" style="max-width: 400px;">
    <h2 class="mb-4 text-center">Đăng nhập</h2>
    <form asp-action="Login" method="post">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }
        <div class="form-group mb-3">
            <label asp-for="UsernameOrEmail"></label>
            <input asp-for="UsernameOrEmail" class="form-control" />
            <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
        <div class="mt-3 text-center">
            <span>Chưa có tài khoản? </span>
            <a href="@Url.Action("Register", "Auth")">Đăng ký người dùng</a>
            <br />
            <span>Bạn là nhà cung cấp? </span>
            <a href="@Url.Action("RegisterSupplier", "Auth")">Đăng ký nhà cung cấp</a>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}