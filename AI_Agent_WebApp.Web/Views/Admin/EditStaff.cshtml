@model AI_Agent_WebApp.Models.Entities.Staff
@{
    ViewData["Title"] = "Edit Staff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-4">
    <h2 class="mb-4">Edit Staff Account</h2>
    <form asp-action="EditStaff" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label asp-for="FullName" class="form-label">Full Name</label>
            <input asp-for="FullName" class="form-control" required />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" required type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Username" class="form-label">Username</label>
            <input asp-for="Username" class="form-control" required />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="@Url.Action("StaffList", "Admin")" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
