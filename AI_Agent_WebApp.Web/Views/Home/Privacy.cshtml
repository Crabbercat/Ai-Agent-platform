<script>
    document.addEventListener('DOMContentLoaded', function () {
        const langSelect = document.getElementById('lang-select');
        const enContent = document.getElementById('privacy-en');
        const viContent = document.getElementById('privacy-vi');
        const pageTitleElement = document.getElementById('page-title');

        // Function to set language
        function setLanguage(lang) {
            if (lang === 'vi') {
                if (enContent) enContent.style.display = 'none';
                if (viContent) viContent.style.display = 'block';
                if (pageTitleElement) pageTitleElement.textContent = 'Chính sách Bảo mật';
                localStorage.setItem('privacyLang', 'vi');
            } else { // default to English
                if (viContent) viContent.style.display = 'none';
                if (enContent) enContent.style.display = 'block';
                if (pageTitleElement) pageTitleElement.textContent = 'Privacy Policy';
                localStorage.setItem('privacyLang', 'en');
            }
            if (langSelect) {
                langSelect.value = lang; // Sync dropdown selection
            }
        }

        // Event listener for the select list
        if (langSelect) {
            langSelect.addEventListener('change', function () {
                setLanguage(this.value);
            });
        }

        // Load saved language preference
        const savedLang = localStorage.getItem('privacyLang') || 'en'; // Default to English
        setLanguage(savedLang);
    });
</script>
